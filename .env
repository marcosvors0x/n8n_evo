# =======================================================
# ARQUIVO: .env
# CONFIGURAÇÕES DO AMBIENTE (SENHAS E VARIÁVEIS)
# =======================================================

# === SERVER CONFIG ===
SERVER_URL=http://localhost:8080
SWAGGER_ENABLED=true
# OBS: Altere 'senha_magica' para sua chave API real!
AUTHENTICATION_API_KEY=sua_chave_secreta_aqui
NODE_ENV=production
TZ=America/Sao_Paulo
LOG_LEVEL=info

# === DATABASE CONFIG ===
DATABASE_ENABLED=true
DATABASE_PROVIDER=postgresql
# Conexão interna: usa 'evolution-db' (nome do serviço)
DATABASE_CONNECTION_URI=postgresql://evo:senha_magica@evolution-db:5432/evolution?schema=public
DATABASE_CONNECTION_CLIENT_NAME=evolution_exchange

# === REDIS CACHE ===
CACHE_REDIS_ENABLED=true
# Conexão interna: usa 'redis' (nome do serviço)
CACHE_REDIS_URI=redis://default:@redis:6379/0

# === WHATSAPP CONFIG (SOLUÇÃO CRÍTICA) ===
INTEGRATIONS_ENABLED=true
WHATSAPP_ENABLED=true
# SOLUÇÃO PARA O PROBLEMA DO QR CODE NO BAILEYS
# Esta versão (indicada pelo Matheus) é a que funcionou:
CONFIG_SESSION_PHONE_VERSION=2.3000.1028148389
